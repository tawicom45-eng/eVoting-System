# Airflow Configuration
AIRFLOW_HOME=/path/to/airflow
AIRFLOW__CORE__DAGS_FOLDER=/path/to/dags
AIRFLOW__CORE__PLUGINS_FOLDER=/path/to/plugins
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# Database Configuration
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@localhost:5432/airflow

# M-Pesa Database
MPESA_DB_HOST=localhost
MPESA_DB_PORT=5432
MPESA_DB_NAME=mpesa_db
MPESA_DB_USER=postgres
MPESA_DB_PASSWORD=password

# Email Configuration
AIRFLOW__SMTP__SMTP_HOST=smtp.gmail.com
AIRFLOW__SMTP__SMTP_PORT=587
AIRFLOW__SMTP__SMTP_USER=your-email@gmail.com
AIRFLOW__SMTP__SMTP_PASSWORD=your-password
AIRFLOW__SMTP__SMTP_MAIL_FROM=airflow@company.com

# Logging
LOG_LEVEL=INFO
